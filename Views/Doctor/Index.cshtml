@model List<ClinicAppointment_System.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h2>Doctors List</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @ViewBag.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Add" asp-route-Role="Admin" class="btn btn-primary">Add New Doctor</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Specialization</th>
            <th>Work Days</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.DoctorInfo.FirstName</td>
                <td>@doctor.DoctorInfo.Role</td> <td>@doctor.DoctorSpecialist.Specialization</td>
                <td>
                    @foreach(var schedule in doctor.DoctorSchedule)
                    {
                        <span class="badge badge-info text-black">
                            @schedule.StartTime.ToString("dddd, MMM dd, yyyy - hh:mm tt") - @schedule.EndTime.ToString("hh:mm tt")
                        </span>
                        <br/>
                    }
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.DoctorInfo.Id" class="btn btn-warning btn-sm">
                        Edit
                    </a>

                    <form asp-action="Delete" asp-route-id="@doctor.DoctorInfo.Id" method="post" style="display:inline;">
                        
                        <button type="submit" class="btn btn-danger btn-sm" 
                                onclick="return confirm('Are you sure you want to delete this doctor?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrorMessage"]
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (Model.Count == 0)
{
    <div class="alert alert-warning">No doctors added yet.</div>
}