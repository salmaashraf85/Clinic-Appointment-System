@model List<ClinicAppointment_System.Models.Doctor>

@{ ViewData["Title"] = "Appointments"; }

@* 1. Alert Message Section *@
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@TempData["AlertType"] alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <h2 class="mb-4"> All Current Appointments</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover border"> 
            <thead class="table-light">
            <tr>
                <th>Doctor</th>
                <th>Day</th>
                <th>From</th>
                <th>To</th>
                <th>Status</th>
                <th class="text-center">Actions</th> </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                @foreach (var app in item.DoctorSchedule)
                {
                    <tr>
                        <td>
                            @item.DoctorInfo.FirstName @item.DoctorInfo.LastName
                        </td>
                        <td>
                            <span>@app.StartTime.ToString("dddd")</span>
                        </td>
                        <td>
                            @app.StartTime.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @app.EndTime.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @if (app.IsBlocked)
                            {
                                <div class="rounded-bottom">
                                    Blocked
                                </div>
                            }
                            else
                            {
                                
                                <div class="rounded-bottom">
                                    @app.AppointmentSate.ToString()
                                </div>
                            }
                        </td>
                        
                        @* 2. The Dropdown Actions Column *@
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical fs-5"></i>
                                </button>

                                <ul class="dropdown-menu">
                                    
                                    <li>
                                        <button type="button" class="dropdown-item" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#rescheduleModal" 
                                                onclick="setScheduleId('@app.Id')">
                                            <i class="bi bi-calendar-event me-2"></i> Reschedule
                                        </button>
                                    </li>
                                    @if (app.AppointmentSate == AppointmentSate.Canceled)
                                    {
                                        <li>
                                            @* Added logic: if Blocked, add 'disabled' class *@
                                            <a asp-controller="Appointment" asp-action="Approve" asp-route-id="@app.Id" 
                                               class="dropdown-item Approve">
                                                <i class="bi bi-check-circle me-2"></i> Approve 
                                            </a>
                                        </li>
                                    }
                                    else if (app.AppointmentSate == AppointmentSate.Approved)
                                    {
                                        <li>
                                            <a asp-controller="Appointment" asp-action="Cancel" asp-route-id="@app.Id" 
                                               class="dropdown-item Cancel">
                                                <i class="bi bi-x-circle me-2"></i> Cancel
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a asp-controller="Appointment" asp-action="Approve" asp-route-id="@app.Id" 
                                               class="dropdown-item @(app.IsBlocked ? "disabled" : "Pending")">
                                                <i class="bi bi-hourglass-split me-2"></i> Approve (Pending)
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>

                                    @if (app.IsAavailable)
                                    {
                                        <li>
                                            <a asp-controller="Appointment" asp-action="@(app.IsBlocked? "UnBlock": "Block")" asp-route-id="@app.Id" 
                                               class="dropdown-item text-success">
                                                <i class="bi bi-unlock me-2"></i> @(app.IsBlocked? "UnBlock": "Block")
                                            </a>
                                        </li>
                                    }

                                    <li>
                                        <a asp-controller="Appointment" asp-action="Delete" asp-route-id="@app.Id" 
                                           class="dropdown-item text-danger"
                                           onclick="return confirm('Are you sure you want to delete this appointment?')">
                                            <i class="bi bi-trash me-2"></i> Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

@* 3. Pop up for Reschedule *@
<div class="modal fade" id="rescheduleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="ReSchedule" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Reschedule Appointment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="modalScheduleId" />
                    
                    <div class="mb-3">
                        <label>New Start Time</label>
                        <input type="datetime-local" name="start" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>New End Time</label>
                        <input type="datetime-local" name="end" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setScheduleId(id) {
            document.getElementById('modalScheduleId').value = id;
        }
    </script>
}