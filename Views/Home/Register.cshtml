@model ClinicAppointment_System.Models.RegisterViewModel

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="card mx-auto shadow-sm" style="max-width: 500px; border-radius: 1rem;">
        <div class="card-body p-4">
            <h2 class="text-center fw-bold mb-2">Join Us</h2>
            <p class="text-center text-muted mb-4">Create your account to get started</p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Register" method="post">
                
                <div class="mb-4 text-center">
                    <label asp-for="Role" class="form-label fw-bold d-block mb-2">I am a:</label>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" asp-for="Role" id="roleDoctor" value="Doctor"
                            onchange="toggleSpecialization()" checked>
                        <label class="btn btn-outline-primary" for="roleDoctor">Doctor üë®‚Äç‚öïÔ∏è</label>

                        <input type="radio" class="btn-check" asp-for="Role" id="rolePatient" value="Patient"
                            onchange="toggleSpecialization()">
                        <label class="btn btn-outline-success" for="rolePatient">Patient ü§í</label>

                        <input type="radio" class="btn-check" asp-for="Role" id="roleAdmin" value="Admin"
                            onchange="toggleSpecialization()">
                        <label class="btn btn-outline-warning" for="roleAdmin">Admin üõ°Ô∏è</label>
                    </div>
                    <span asp-validation-for="Role" class="text-danger d-block mt-1"></span>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="John" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Doe" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email Address</label>
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="********" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div id="specializationDiv" class="mb-3" style="display:block;">
                    <label asp-for="Specialization" class="form-label fw-bold">Specialization</label>
                    <select asp-for="Specialization" class="form-select">
                        <option value="" disabled selected>-- Select Specialization --</option>
                        <option value="Diagnostician">Diagnostician</option>
                        <option value="Nephrology">Nephrology</option>
                        <option value="Surgery">Surgery</option>
                        <option value="Psychiatry">Psychiatry</option>
                    </select>
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Sign Up</button>
            </form>

            <div class="text-center mt-3">
                Already have an account? <a asp-action="Login" class="text-decoration-none fw-bold">Login here</a>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleSpecialization() {
        var isDoctor = document.getElementById("roleDoctor").checked;
        var div = document.getElementById("specializationDiv");
        
        if (isDoctor) {
            div.style.display = "block";
        } else {
            div.style.display = "none";
            document.querySelector('select[name="Specialization"]').value = "";
        }
    }
    window.onload = toggleSpecialization;
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}